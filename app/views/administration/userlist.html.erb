  <tbody>
  <% @user.each do |user| %>
      <tr>
        <td><%= user.staff_id %></td>
        <td><%= user.email%></td>
        <td><%= @role.find(user.officer_role_id).role%></td>
        <td><%= user.status %></td>
        <td>
          <% if user.status == 'active' %>
              <%= link_to 'Ban', administration_banuser_path(:which_user => user.id) %>
          <% else %>
              <%= link_to 'Active', administration_activeuser_path(:which_user => user.id) %>
          <% end %>
